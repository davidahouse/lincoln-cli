{
  "name": "@davidahouse/lincoln-cli",
  "main": "bin/lincoln-cli.js",
  "version": "0.2.0",
  "description": "A command line app for managing Lincoln content",
  "license": "MIT",
  "repository": "davidahouse/lincoln-cli",
  "preferGlobal": true,
  "bin": {
    "lincoln-cli": "bin/lincoln-cli.js"
  },
  "dependencies": {
    "@davidahouse/lincoln-api": "^0.5.0",
    "commander": "^2.19.0"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-google": "^0.11.0"
  },
  "scripts": {
    "lint": "eslint $(find . -name \"*.js\" -not -path \"./node_modules/*\" -not -path \"./public/*\")",
    "lint-fix": "eslint --fix $(find . -name \"*.js\" -not -path \"./node_modules/*\" -not -path \"./public/*\")"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "impliedStrict": true
      },
      "sourceType": "module"
    },
    "rules": {
      "no-console": 0,
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  }
}
